<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="color"
            type="com.trava.user.utils.ConfigPOJO.Companion" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referral Code"
                    android:fontFamily="@font/mont_bold"
                    app:textcolor="@{color.black_color}"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:textSize="18sp"
                    android:paddingBottom="15dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/mont_regular"
                    android:lineSpacingExtra="6.5dp"
                    android:text="@string/refer_your_riders_to_kuai_ride_for_each_riders_successfully_making_their_first_cab_booking_get_special_rewards"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ref_code_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T32859f"
                        android:fontFamily="@font/mont_bold"
                        app:textcolor="@{color.black_color}"
                        android:paddingStart="20dp"
                        android:textIsSelectable="true"
                        android:letterSpacing=".15"
                        android:paddingTop="20dp"
                        android:textSize="20sp"
                        android:paddingBottom="15dp"/>


                    <ImageView
                        android:id="@+id/copy_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/copy_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="40dp"/>


                </RelativeLayout>


                <TextView
                        android:id="@+id/tvShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/shape_next_btn"
                        android:fontFamily="@font/mont_regular"
                        android:textAllCaps="false"
                        android:gravity="center"
                        style="@style/Base.Widget.AppCompat.Button"
                        android:paddingBottom="12dp"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:text="@string/share_referral_code"
                        app:textcolor="@{color.btn_Text_Colour}"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvName" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>

