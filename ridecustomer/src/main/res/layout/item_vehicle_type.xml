<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/mont_regular"
        android:gravity="center"
        android:textColor="@color/selector_vehicle"
        android:textSize="12sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/viewSelector"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_below="@+id/tvEstimatePrice"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_vehicle_selected"
        app:srcCompat="@drawable/ic_profie_bg_ph">

        <ImageView
            android:id="@+id/ivVehicleImage"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvEstimatePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center"
        android:maxLines="2"
        android:text=""
        android:visibility="invisible"
        android:textColor="@color/selector_vehicle"
        android:textSize="10sp" />

    <TextView
        android:layout_below="@+id/info_iv"
        android:id="@+id/tvEstimatePricenew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:gravity="center"
        android:maxLines="2"
        android:visibility="visible"
        android:textColor="@color/selector_vehicle"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSelector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVehicleName"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sf_pro_text_regular"
            android:gravity="center"
            android:maxLines="3"
            android:textColor="@color/selector_vehicle"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/info_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ll"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:src="@drawable/ic_info"
        android:visibility="gone" />
</RelativeLayout>