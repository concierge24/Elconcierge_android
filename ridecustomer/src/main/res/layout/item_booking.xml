<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/rr_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:paddingBottom="12dp"
        android:background="@drawable/shape_border">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMap"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
             />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivMap"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="13sp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="@color/black_1c"
            android:layout_toStartOf="@+id/tvPaymentTypeAmount"
            tools:text="July 28 · 01:52 PM" />

        <TextView
            android:id="@+id/tvPaymentTypeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ivMap"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="@color/black_1c"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:textSize="13sp"
            tools:text="Cash · 340 OMR" />

        <TextView
            android:id="@+id/tvBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDateTime"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/black_8c"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="12sp"
            android:textDirection="locale"
            android:layout_toStartOf="@+id/tvBookingStatus"
            tools:text="Id:252572457" />

        <TextView
            android:id="@+id/tvBookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDateTime"
            android:fontFamily="@font/sf_pro_text_regular"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            tools:text="Completed" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvPackgeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookingStatus"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="@color/thin_light_purple"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Through package booking" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>