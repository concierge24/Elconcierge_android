<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp" />

    <com.trava.user.utils.ShapeTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingMultiplier="1.24"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/guidelineMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:topRightRadius="12dp"
        app:topLeftRadius="12dp"
        app:bottomLeftRadius="12dp"
        app:solidBackgroundColor="@color/light_blue"
        android:text="Hey! I am interested in the  property youâ€™ve listed. I was thinking of having a look at it. Can we schedule a tour? and Is the price listed fixed?
Thanks."
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/mont_regular"
        android:gravity="end"
        android:padding="4dp"
        android:singleLine="true"
        android:textColor="@color/quantum_black_100"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        tools:text="5:30 AM"
        android:layout_marginRight="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>