<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="color"
            type="com.trava.user.utils.ConfigPOJO.Companion" />
    </data>

    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.orderdetails.supplies.EnterOrderDetailsFragment">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:src="@drawable/ic_back_arrow_black" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp"
            app:contentPaddingBottom="0dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/rl_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_divider_bottom"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/order_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/mont_bold"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="15dp"
                            android:text="@string/order" />

                        <TextView
                            android:id="@+id/check_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/mont_bold"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="15dp"
                            android:text="@string/checklist" />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/order_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/carpool_switch"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:visibility="gone"
                            android:textSize="@dimen/_15sdp"
                            android:text="@string/need_helper"
                            android:paddingEnd="@dimen/_16sdp"
                            android:paddingStart="@dimen/_16sdp"
                            android:theme="@style/SwitchBar"
                            app:thumbTextPadding="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view5"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/healperheader"
                            android:padding="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="4dp"
                            android:fontFamily="@font/mont_regular"
                            android:text="@string/require_helper"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/carpool_switch"
                            app:textcolor="@{color.black_color}" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/etDropoffAddress"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:ems="10"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/pickup_address"
                            android:inputType="textCapSentences"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:singleLine="true"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/healperheader" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/etPickupAddress"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:ems="10"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/dropoff_address"
                            android:inputType="textCapSentences"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:singleLine="true"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etDropoffAddress" />

                        <EditText
                            android:id="@+id/etTypeOfMaterial"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:ems="10"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_details_of_order"
                            android:inputType="textCapSentences"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:singleLine="true"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etPickupAddress" />

                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:ems="10"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_approx_weight"
                            android:inputType="numberDecimal"
                            android:maxLines="2"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etTypeOfMaterial" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/etCommercialvalue"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:ems="10"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/commercial_value"
                            android:inputType="numberDecimal"
                            android:maxLines="2"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etWeight" />

                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/sp_pickup_level"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_drop_down_normal_nonborder"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:gravity="center_vertical"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etCommercialvalue" />

                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/sp_drop_level"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_drop_down_normal_nonborder"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:gravity="center_vertical"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sp_pickup_level" />

                        <Spinner
                            android:visibility="gone"
                            android:background="@drawable/shape_drop_down_normal_nonborder"
                            android:id="@+id/sp_type"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:drawableEnd="@drawable/ic_dd_s_blue_copy"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:gravity="center_vertical"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sp_drop_level" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/elevator_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:paddingStart="15dp"
                            android:paddingEnd="18dp"
                            android:text="@string/is_there_an_elevator_at_the_pickup"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sp_type"
                            app:textcolor="@{color.black_color}" />

                        <RadioGroup
                            android:visibility="gone"
                            android:id="@+id/rbPickupGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginVertical="12dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/elevator_tv">

                            <RadioButton
                                android:id="@+id/rbYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/yes"
                                app:checkColor="@{color.primary_color}"
                                app:textcolor="@{color.black_color}"
                                app:uncheckColor="@{color.primary_color}" />

                            <RadioButton
                                android:id="@+id/rbNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="32dp"
                                android:text="@string/no"
                                app:checkColor="@{color.primary_color}"
                                app:textcolor="@{color.black_color}"
                                app:uncheckColor="@{color.primary_color}" />

                        </RadioGroup>

                        <EditText
                            android:id="@+id/etDeliverpersonName"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_name_of_person_to_deliver"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:singleLine="false"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rbPickupGroup" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_phone_number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etDeliverpersonName" />

                        <EditText
                            android:id="@+id/etDeliverPerson"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_the_sender_s_name"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:singleLine="false"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etPhone" />

                        <EditText
                            android:visibility="gone"
                            android:id="@+id/etDeliverPersonPhone"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_sender_s_phone"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:singleLine="false"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etDeliverPerson" />

                        <EditText
                            android:id="@+id/etAdditionalInfo"
                            android:layout_width="0dp"
                            android:paddingVertical="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:hint="@string/enter_additional_information"
                            android:inputType="textMultiLine|textCapSentences"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:minLines="2"
                            android:singleLine="false"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etDeliverPersonPhone" />

                        <TextView
                            android:id="@+id/tvSubModels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/mont_bold"
                            android:text="@string/select_sub_model"
                            android:textColor="@color/text_dark"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view4" />

                        <Spinner
                            android:id="@+id/spinnerSubModel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:drawableEnd="@drawable/ic_dd_s_blue_copy"
                            android:fontFamily="@font/mont_bold"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintBottom_toTopOf="@+id/view5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view4" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/divider"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSubModels" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:padding="16dp"
                            android:text="@string/enter_details_of_order"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textcolor="@{color.black_color}" />

                        <TextView
                            android:id="@+id/tvSelectBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/mont_bold"
                            android:text="@string/select_brand"
                            android:textColor="@color/text_dark"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView7" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBrands"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:clipToPadding="false"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="16dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSelectBrand" />

                        <TextView
                            android:id="@+id/tvVehicleType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/mont_bold"
                            android:text="@string/select_vehicle_type"
                            android:textColor="@color/text_dark"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rvBrands" />

                        <Spinner
                            android:id="@+id/spinnerVehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:fontFamily="@font/mont_bold"
                            android:gravity="center_vertical"
                            android:text="5 Gallons"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintBottom_toTopOf="@+id/view4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rvBrands" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/divider"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvVehicleType" />

                        <TextView
                            android:id="@+id/tvNext"
                            style="@style/Base.Widget.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/mont_bold"
                            android:gravity="center"
                            android:text="@string/book_now"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/tvSchedule"
                            app:layout_constraintTop_toBottomOf="@+id/barrier2"
                            app:textcolor="@{color.white_color}" />

                        <LinearLayout
                            android:id="@+id/tvSchedule"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:visibility="gone"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/shape_add_comments"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tvNext"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/barrier2">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="12dp"
                                android:src="@drawable/ic_schedule"
                                app:tint="@{color.secondary_color}" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/sf_pro_text_medium"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="@string/schedule"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:textcolor="@{color.secondary_color}" />

                        </LinearLayout>



                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mont_regular"
                            android:text="@string/upload_images"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etAdditionalInfo"
                            app:textcolor="@{color.black_color}" />

                        <TextView
                            android:id="@+id/tv_add_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mont_regular"
                            android:text="@string/add_more_details"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toStartOf="@+id/imageView2"
                            app:layout_constraintTop_toBottomOf="@+id/etAdditionalInfo"
                            app:textcolor="@{color.black_color}" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvCompanies"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:paddingStart="6dp"
                            android:paddingEnd="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/barrier2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"
                            tools:targetApi="lollipop" />

                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/barrier2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:barrierDirection="bottom"
                            app:constraint_referenced_ids="rvCompanies"
                            tools:layout_editor_absoluteY="331dp" />

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:constraint_referenced_ids=""
                            tools:visibility="visible" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_dd_s_blue_copy"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_add_more"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_add_more"
                            app:tint="@{color.secondary_color}" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_ch_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="10dp">

                        <TextView
                            android:id="@+id/tv_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_divider_bottom"
                            android:fontFamily="@font/mont_bold"
                            android:padding="16dp"
                            android:text="@string/enter_checklist_items"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/checklist_rv"
                            android:layout_width="match_parent"
                            android:background="@drawable/shape_divider_bottom"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginVertical="10dp"
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mont_bold"
                            android:padding="10dp"
                            android:background="@drawable/shape_divider_bottom"
                            android:layout_gravity="right"
                            android:text="Total : 0"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            tools:ignore="RtlCompat" />

                        <LinearLayout
                            android:padding="4dp"
                            android:id="@+id/check_ll"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <EditText
                                android:layout_weight="1"
                                android:id="@+id/ed_product_name"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_border"
                                android:fontFamily="@font/sf_pro_text_regular"
                                android:hint="@string/enter_product_name"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textAlignment="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="@color/text_dark"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/ed_price"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="4dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_border"
                                android:maxLength="9"
                                android:layout_below="@+id/ed_product_name"
                                android:fontFamily="@font/sf_pro_text_regular"
                                android:hint="@string/price"
                               android:textAlignment="center"
                                android:inputType="number"
                                android:maxLines="1"
                                android:layout_marginRight="10dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="@color/text_dark"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_weight="1.2"
                                android:id="@+id/add_ivv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                app:fontFamily="@font/sf_pro_text_semibold"
                                android:text="@string/add"
                                android:textSize="14sp"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvChecklistNextt"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="30dp"
                            app:background="@{color.primary_color}"
                            android:ems="10"
                            android:gravity="center"
                            app:fontFamily="@font/sf_pro_text_semibold"
                            android:text="@string/continuee"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="2dp"
                            android:textSize="16sp"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>