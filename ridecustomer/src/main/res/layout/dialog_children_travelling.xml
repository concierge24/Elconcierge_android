<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">

    <LinearLayout
        android:id="@+id/ll_lay"
        android:padding="10dp"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/male_children_travelling"
            android:textColor="@color/black_1c"
            android:textSize="16sp"
            app:fontFamily="@font/sf_pro_text_bold" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/select_desired_option"
            android:textColor="@color/black_8c"
            android:textSize="13sp"
            app:fontFamily="@font/sf_pro_text_regular" />

        <TextView
            android:id="@+id/tvChildren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/are_male_children_travelling"
            android:textColor="@color/black_1c"
            android:textSize="@dimen/_15ssp"
            app:fontFamily="@font/sf_pro_text_bold" />

        <TextView
            android:id="@+id/tvChildrenDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:text="@string/are_male_children_travelling_desc"
            android:textColor="@color/black_1c"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center"
            android:gravity="center"
            app:fontFamily="@font/sf_pro_text_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/llButtons"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/shape_border_gray"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="@color/black_1c"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                app:fontFamily="@font/sf_pro_text_bold" />

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:text="@string/yes"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_border_gray"
                android:textColor="@color/black_1c"
                android:textSize="@dimen/_13ssp"
                app:fontFamily="@font/sf_pro_text_bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvOk"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_25sdp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/ok"
            android:background="@drawable/shape_border_gray"
            android:textColor="@color/black_1c"
            android:textSize="@dimen/_13ssp"
            app:fontFamily="@font/sf_pro_text_bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>