<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="color"
            type="com.codebrew.clikat.utils.configurations.ColorConfig" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:padding="@dimen/value_12"
        android:layout_margin="@dimen/value_1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_serviceType"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            tools:srcCompat="@tools:sample/avatars" />

        <com.codebrew.clikat.utils.customviews.ClikatTextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:gravity="center"
            android:textSize="@dimen/text_small"
            android:text="lacj"
            app:categoryType="text_body" />

        <com.codebrew.clikat.utils.customviews.ClikatTextView
            android:id="@+id/tv_service_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:gravity="center"
            android:text="ldmjasjckjc"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:visibility="visible"
            app:categoryType="text_head" />
    </LinearLayout>

</layout>